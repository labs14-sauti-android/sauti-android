<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.TradeInfoFragment"
        android:id="@+id/fl_fragment_container_trade_info"
        android:background="@color/colorPrimaryDark">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark" android:id="@+id/cl_trade_info_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/colorInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cl_expanded_trade_info"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5">
            <TextView
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    tools:text="These commodities are banned and cannot legally cross the border:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_trade_info_header" app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/colorTextInformation"
                    android:layout_marginTop="22dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="20dp"
                    android:layout_marginEnd="64dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/TradeInfoDetailsSubHeaderStyling"
                    android:id="@+id/t_trade_info_sub_header" android:layout_marginTop="12dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/t_trade_info_header"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="95dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/l_trade_info_left_list"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/t_trade_info_header"
                    app:layout_constraintTop_toBottomOf="@+id/t_trade_info_header"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/l_trade_info_right_list" android:layout_marginTop="18dp"
                    android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0">
            </LinearLayout>
            <LinearLayout
                    app:layout_constraintStart_toEndOf="@+id/l_trade_info_left_list"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/l_trade_info_right_list"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/t_trade_info_header"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:layout_marginTop="18dp" android:layout_marginEnd="20dp" android:layout_marginBottom="25dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0">
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="235dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/t_trade_info_sub_header"
                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/rv_trade_info_required_documents"
            />
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="235dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="15dp" android:id="@+id/rv_trade_info_border_procedures"
                    android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/t_trade_info_sub_header"/>
            <ImageView
                    android:src="@drawable/line_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/i_trade_info_divider_top" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="fitXY" app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/t_trade_info_sub_header" android:layout_marginTop="13dp"/>
            <ImageView
                    android:src="@drawable/line_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/i_trade_info_divider_bottom"
                    android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:scaleType="fitXY"/>
            <!-- TODO: textstyle, size, and font family will receive a style -->

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:text="@string/your_recent_searches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t_trade_info_total"
                android:textColor="@color/colorText"
                android:layout_marginStart="30dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_expanded_trade_info"
                android:layout_marginTop="18dp"/>
        <com.labs.sauti.views.CardViewRecentSearches
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tiv_trade_info_recent_first"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/t_trade_info_total"
                app:layout_constraintDimensionRatio="1:1" android:layout_marginStart="30dp"/>
        <com.labs.sauti.views.CardViewRecentSearches
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tiv_trade_info_recent_second"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toEndOf="@+id/tiv_trade_info_recent_first"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="35dp" app:layout_constraintTop_toTopOf="@+id/tiv_trade_info_recent_first"
                app:layout_constraintBottom_toBottomOf="@+id/tiv_trade_info_recent_first"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginStart="15dp" app:layout_constraintVertical_bias="1.0">
        </com.labs.sauti.views.CardViewRecentSearches>
        <TextView
                android:text="@string/push_to_view"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:id="@+id/t_push_to_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tiv_trade_info_recent_first"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_trade_info_search"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_search_24dp"
                android:layout_marginBottom="@dimen/fab_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/fab_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t_push_to_view"
                app:layout_constraintVertical_bias="1.0" android:layout_marginTop="5dp"/>
        <!-- TODO: t_push_to_view could use styling but not seen anywhere -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>