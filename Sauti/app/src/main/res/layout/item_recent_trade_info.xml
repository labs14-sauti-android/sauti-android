<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/c_trade_info"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorCardBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorCardBackground"
            android:layout_height="match_parent">

        <TextView
                tools:text="These commodities are banned:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/t_trade_info_header"
                style="@style/CardViewTradeInfoHeaderTextStyling"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="16dp"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/ll_trade_list" android:orientation="vertical"
                      app:layout_constraintStart_toStartOf="@+id/t_trade_info_header"
                      android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/t_trade_info_header"
                      app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>