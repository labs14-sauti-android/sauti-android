<?xml version="1.0" encoding="utf-8"?>
<com.labs.sauti.views.TradeInfoViewRecentSearches
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true" app:cardBackgroundColor="@color/colorCardBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                tools:text="Banned Things"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/t_trade_info_header"
                android:textColor="#000000"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_marginTop="9dp"
                      app:layout_constraintTop_toBottomOf="@+id/t_trade_info_header"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="3dp"></LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.labs.sauti.views.TradeInfoViewRecentSearches>