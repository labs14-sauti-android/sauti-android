<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.TaxCalculatorSearchFragment"
             android:clickable="true"
             android:focusable="true"
             android:background="@color/tax_calculator_search_background">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="23dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Search"
                    android:textSize="24sp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/tax_calculator_search_text_color"/>

            <ViewSwitcher
                    android:id="@+id/vs_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What category of commodities are you trading?"
                            android:textSize="18sp"
                            android:textColor="@color/tax_calculator_search_text_color"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/search_spinner_background"/>

                        <Spinner
                                android:id="@+id/s_categories"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="#2e2e2e">
                        </Spinner>

                    </RelativeLayout>

                </LinearLayout>

                <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </ViewSwitcher>

            <ViewSwitcher
                    android:id="@+id/vs_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What commodity are you trading?"
                            android:textSize="18sp"
                            android:textColor="@color/tax_calculator_search_text_color"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/search_spinner_background"/>

                        <Spinner
                                android:id="@+id/s_products"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="#2e2e2e">
                        </Spinner>

                    </RelativeLayout>

                </LinearLayout>

                <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </ViewSwitcher>

            <ViewSwitcher
                    android:id="@+id/vs_where_to_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Where are you selling your goods?"
                            android:textSize="18sp"
                            android:textColor="@color/tax_calculator_search_text_color"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/search_spinner_background"/>

                        <Spinner
                                android:id="@+id/s_where_to_list"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="#2e2e2e">
                        </Spinner>

                    </RelativeLayout>

                </LinearLayout>

                <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </ViewSwitcher>

            <ViewSwitcher
                    android:id="@+id/vs_where_from_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Where was your product made/originate?"
                            android:textSize="18sp"
                            android:textColor="@color/tax_calculator_search_text_color"/>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:src="@drawable/search_spinner_background"/>

                        <Spinner
                                android:id="@+id/s_where_from_list"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:backgroundTint="#2e2e2e">
                        </Spinner>

                    </RelativeLayout>

                </LinearLayout>

                <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </ViewSwitcher>

            <LinearLayout
                    android:id="@+id/ll_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What is the approximate value of your good in UGX?"
                        android:textSize="18sp"
                        android:textColor="@color/tax_calculator_search_text_color"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:src="@drawable/search_spinner_background"/>

                    <EditText
                            android:id="@+id/et_value"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:maxLines="1"/>

                </RelativeLayout>

            </LinearLayout>

            <ViewSwitcher
                    android:id="@+id/vs_search_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/b_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:backgroundTint="@color/button_primary_color"
                        android:textColor="@color/button_text_primary_color"/>

                <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </ViewSwitcher>



        </LinearLayout>

    </ScrollView>



</FrameLayout>