<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl_fragment_container"
        android:background="@color/tax_calculator_background"
        tools:context=".fragment.TaxCalculatorFragment"
        tools:showIn="@layout/tool_app_bar_tax_calculator">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/ll_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/t_details_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Taxes for Millet"
                        android:textColor="@color/tax_calculator_details_text_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="9dp"/>
                <TextView
                        android:id="@+id/t_details_wholesale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Wholesale: 90 KES/1Kg"
                        android:textColor="@color/tax_calculator_details_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/t_details_retail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Retail: 120 KES/1Kg"
                        android:textColor="@color/tax_calculator_details_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="9dp"/>
                <TextView
                        android:id="@+id/t_details_updated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Updated: 2019-06-24"
                        android:textColor="@color/tax_calculator_details_text_color"
                        android:textSize="14sp"/>
                <TextView
                        android:id="@+id/t_details_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Source: EAGC-RATIN"
                        android:textColor="@color/tax_calculator_details_text_color"
                        android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/your_recent_tax_calculations"
                        android:textColor="#f8c8c4"/>

                <LinearLayout
                        android:id="@+id/ll_recent_tax_calculations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <include layout="@layout/item_tax_calculation"/>
                    <include layout="@layout/item_tax_calculation"/>

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/push_to_view"
                        android:gravity="center"
                        android:textColor="@color/tax_calculator_details_text_color"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/b_search"
                android:layout_margin="20dp"
                android:layout_gravity="bottom|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_primary_color"
                android:src="@drawable/ic_search_24dp"/>

    </FrameLayout>

</FrameLayout>