<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/c_document_agency_parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="20dp"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/rv_tv_document_agency_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="BLABL ALWHLAJ"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="@dimen/cardViewHeaderTextSize"
            tools:textColor="@color/colorAccent" />

    <TextView
            android:id="@+id/rv_tv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_plus"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            tools:text="+"
            tools:textColor="@color/colorAccent" />

</LinearLayout>