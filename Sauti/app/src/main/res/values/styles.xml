<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorText</item>
    </style>
    <style name="CardViewTradeInfoContentTextStyling">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorCardText</item>
        <item name="android:textSize">@dimen/cardViewContentTextSize</item>
    </style>
    <style name="CardViewTradeInfoHeaderTextStyling">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/cardViewHeaderTextSize</item>
        <item name="android:textColor">@color/colorCardText</item>
    </style>
    <style name="TradeInfoDetailsListTextStyling">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/cardViewHeaderTextSize</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
</resources>
