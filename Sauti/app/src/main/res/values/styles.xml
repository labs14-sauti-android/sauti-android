<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorText</item>
    </style>
    <style name="DashboardCardNavStyling">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorButtonResponseText</item>
    </style>
    <style name="DashboardBottomNavStyling">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
    <style name="CardViewTradeInfoContentTextStyling">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorCardText</item>
        <item name="android:textSize">@dimen/cardViewContentTextSize</item>
    </style>
    <style name="CardViewTradeInfoHeaderTextStyling">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/cardViewHeaderTextSize</item>
        <item name="android:textColor">@color/colorCardText</item>
    </style>
    <style name="TradeInfoDetailsListTextStyling">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/cardViewHeaderTextSize</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="SearchFragmentHeaderStyling">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <!--TODO Finalize Styling -->
    </style>
    <style name="SearchFragmentParamTextStyling">
        <item name="android:textSize">@dimen/searchParamTextSize</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- TODO: Navigation Drawer Styling. -->

</resources>
